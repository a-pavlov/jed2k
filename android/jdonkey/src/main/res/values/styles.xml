    <!-- Default Dialog -->
    <style name="DefaultDialogTheme">
        <item name="android:windowMinWidthMajor">@dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@dimen/dialog_min_width_minor</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:buttonStyle">@style/DefaultDialogTheme.Buttons</item>
    </style>
    <!-- v21 -->
    <style name="DefaultDialogTheme.TitleBar">
        <item name="android:background">@drawable/default_dialog_title_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_x_large</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DefaultDialogTheme.MainText">
        <item name="android:textSize">@dimen/text_large</item>
    </style>
    <style name="DefaultDialogTheme.SmallText">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/app_text_secondary</item>
        <item name="android:padding">3dp</item>
    </style>
    <style name="DefaultDialogTheme.LongText">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>
    <style name="DefaultDialogTheme.Buttons">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minLines">1</item>
    </style>
    <!--v21-->
    <style name="DefaultDialogTheme.SmallTextMedium">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/app_text_secondary</item>
        <item name="android:padding">3dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
