<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" >

                <fragment
                    android:id="@+id/activity_main_fragment_servers"
                    android:name="org.dkf.jdonkey.fragments.ServersFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="servers_fragment" />

                <fragment
                    android:id="@+id/activity_main_fragment_search"
                    android:name="org.dkf.jdonkey.fragments.SearchFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="search_fragment" />

                <fragment
                    android:id="@+id/activity_main_fragment_transfers"
                    android:name="org.dkf.jdonkey.fragments.TransfersFragment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:tag="transfers_fragment" />
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_main_left_drawer"
            android:layout_width="@dimen/mainmenu_width"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/left_drawer"
                style="@style/SlideMenu.List"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/app_dark_blue"
                android:choiceMode="singleChoice"
                android:divider="@android:color/transparent"
                android:dividerHeight="0dp" />
        </LinearLayout>
    </android.support.v4.widget.DrawerLayout>

</LinearLayout>
